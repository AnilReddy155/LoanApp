package com.cg.util;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.kafka.core.KafkaTemplate;
import org.springframework.stereotype.Component;

import com.cg.constants.AppConstants;
import com.cg.model.CustomerDTO;

@Component
public class KafkaProducerHelper {

	@Autowired
	private KafkaTemplate<String, CustomerDTO> kafkaTemplate;

	public void sendMessage(CustomerDTO customerDTO) {
		kafkaTemplate.send(AppConstants.CUSTOMER_REQUEST_TOPIC, customerDTO);
	}
}
